{
  "name": "@drewzemke/synapse",
  "version": "1.3.0",
  "description": "Lightweight CLI LLM Interface",
  "repository": {
    "type": "git",
    "url": "https://github.com/drewzemke/synapse.git"
  },
  "main": "dist/index.js",
  "bin": {
    "sy": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "verify": "pnpm lint:fix && pnpm build && pnpm test",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "cli",
    "llm",
    "ai",
    "chat",
    "anthropic",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.10",
    "ai": "^4.3.13",
    "toml": "^3.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.15.9",
    "@types/yargs": "^17.0.33",
    "semantic-release": "^24.2.3",
    "vitest": "^3.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
