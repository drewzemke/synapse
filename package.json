{
  "name": "@drewzemke/synapse",
  "version": "1.10.0",
  "description": "Lightweight CLI LLM Interface",
  "repository": {
    "type": "git",
    "url": "https://github.com/drewzemke/synapse.git"
  },
  "main": "dist/index.js",
  "bin": {
    "sy": "dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=cjs --minify",
    "check": "tsc --noEmit",
    "dev": "tsx src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "verify": "pnpm check && pnpm lint:fix && pnpm test",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "cli",
    "llm",
    "ai",
    "chat",
    "anthropic",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^2.2.9",
    "@ai-sdk/anthropic": "^1.2.10",
    "@ai-sdk/openai": "^1.3.22",
    "@aws-sdk/credential-providers": "^3.806.0",
    "@openrouter/ai-sdk-provider": "^0.4.5",
    "ai": "^4.3.13",
    "ansi-escapes": "^7.0.0",
    "chalk": "^5.4.1",
    "nanospinner": "^1.2.2",
    "refractor": "^5.0.0",
    "toml": "^3.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "yargs": "^17.7.2",
    "zod": "^3.24.4",
    "zod-validation-error": "^3.4.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/hast": "^3.0.4",
    "@types/node": "^22.15.9",
    "@types/yargs": "^17.0.33",
    "esbuild": "^0.25.4",
    "semantic-release": "^24.2.3",
    "vitest": "^3.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
